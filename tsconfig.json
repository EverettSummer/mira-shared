{
   "compilerOptions": {
      "lib": [
         "es2020",
         "esnext.asynciterable",
         "dom"
      ],
      "target": "es2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "declaration": true,
      "declarationMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "importHelpers": true,
      "sourceMap": true,
      "baseUrl": "src",
      "outDir": "dist",
      "rootDir": "src",
      "paths": {
         "*": ["node_modules/@types"]
      }
   },
   "exclude": [
      "node_modules"
   ]
}